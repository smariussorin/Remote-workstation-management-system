<Window x:Class="SystemManagament.Client.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tabs="clr-namespace:SystemManagament.Client.WPF"
        xmlns:viewModel="clr-namespace:SystemManagament.Client.WPF.ViewModel"
        mc:Ignorable="d"        
        xmlns:converters="clr-namespace:SystemManagament.Client.WPF.Converters"
        Title="Remote Workstation Managament WPF Client" Height="600" Width="800"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
        
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5 5 5 10" >
            <Menu HorizontalAlignment = "Left" VerticalAlignment = "Top" >
                <MenuItem Header = "Manage">
                    <MenuItem Header = "Connect..." HorizontalAlignment = "Left" Width = "150" Command="{Binding NewTab}"/>
                    <MenuItem Header = "Item 2" HorizontalAlignment = "Left" Width = "150" />
                    <Separator HorizontalAlignment = "Left" Width = "150"/>
                    <MenuItem Header = "Exit" HorizontalAlignment = "Left" Width = "150" Command="{Binding Exit}"/>
                </MenuItem>
            </Menu>
            <Menu HorizontalAlignment = "Left" VerticalAlignment = "Top">
                <MenuItem Header = "Options">
                    <MenuItem Header = "Preferences" HorizontalAlignment = "Left" Width = "150" />
                    <MenuItem Header = "Item 2" HorizontalAlignment="Left" Width = "150" />
                    <Separator HorizontalAlignment = "Left" Width = "150"/>
                    <MenuItem Header = "Item 3" HorizontalAlignment = "Left" Width = "150" />
                </MenuItem>
            </Menu>
        </StackPanel>
        <!--<StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Command="{Binding NewTab}" Margin="0,0,12,0">New Tab</Button>
        </StackPanel>-->
        <TabControl DockPanel.Dock="Bottom" ItemsSource="{Binding ViewModelTabs}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="test"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate DataType="{x:Type viewModel:WorkStationViewModel}">
                    <tabs:WorkStationTabView DataContext="{Binding}"></tabs:WorkStationTabView>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </DockPanel>
</Window>
