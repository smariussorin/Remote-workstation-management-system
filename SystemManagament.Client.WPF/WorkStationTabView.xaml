<UserControl x:Class="SystemManagament.Client.WPF.WorkStationTabView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SystemManagament.Client.WPF"
        xmlns:viewModel="clr-namespace:SystemManagament.Client.WPF.ViewModel"
        mc:Ignorable="d"
        xmlns:converters="clr-namespace:SystemManagament.Client.WPF.Converters"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        d:DesignHeight="500" d:DesignWidth="700"             
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:UnitValueToStringConverter x:Key="UnitValueToStringConverter"/>

    </UserControl.Resources>

    <Grid>
        <dragablz:TabablzControl TabStripPlacement="Left">
            <dragablz:TabablzControl.ItemContainerStyle>
                <Style TargetType="{x:Type dragablz:DragablzItem}" BasedOn="{StaticResource MaterialDesignDragableTabItemVerticalStyle}">
                    <Setter Property="Width" Value="130" />
                </Style>
            </dragablz:TabablzControl.ItemContainerStyle>
            <dragablz:TabablzControl.InterTabController>
                <dragablz:InterTabController />
            </dragablz:TabablzControl.InterTabController>
                <TabItem Header="Control">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Button Content="Load process dynamic" Command="{Binding LoadWindowsProcessDynamicDataCommand}"
                    HorizontalAlignment="Stretch" Grid.Row="2"/>
                        <Button Command="{Binding LoadWindowsProcessDynamicDataCommand.CancelCommand}" Content="Cancel" Grid.Row="3"/>
                        <Button Content="Load memory static" Command="{Binding LoadHardwareStaticDataCommand}"
                    HorizontalAlignment="Stretch" Grid.Row="4" />
                        <Button Command="{Binding LoadHardwareStaticDataCommand.CancelCommand}" Content="Cancel" Grid.Row="5"/>

                        <Button Content="Clear data" Command="{Binding ClearDataCommand}"
                    HorizontalAlignment="Stretch" Grid.Row="6" />


                        <Grid Visibility="{Binding LoadHardwareStaticDataCommand.Execution,
                    Converter={StaticResource NullToVisibilityConverter}}">

                            <!--Busy indicator-->

                            <Label Content="Loading..."
                        Visibility="{Binding LoadHardwareStaticDataCommand.Execution.IsNotCompleted,
                        Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="Yellow"/>

                            <!--Results-->

                            <Label Content="{Binding LoadHardwareStaticDataCommand.Execution.Result}"
                        Visibility="{Binding LoadHardwareStaticDataCommand.Execution.IsSuccessfullyCompleted,
                        Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="Black"/>

                            <!--Error details-->

                            <Label Content="{Binding LoadHardwareStaticDataCommand.Execution.ErrorMessage}"
                        Visibility="{Binding LoadHardwareStaticDataCommand.Execution.IsFaulted,
                        Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="Red" />

                            <!--Canceled-->

                            <Label Content="Canceled"
                        Visibility="{Binding LoadHardwareStaticDataCommand.Execution.IsCanceled,
                        Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="Blue" />
                        </Grid>
                    </Grid>
                </TabItem>
            <TabItem Header="Software Static">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3">
                        <Button Content="Refresh software static data" Command="{Binding LoadSoftwareStaticDataCommand}" 
                            HorizontalAlignment="Stretch" BorderThickness="2" Foreground="Orange"/>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="3">
                        <Button Content="Cancel" Command="{Binding LoadSoftwareStaticDataCommand.CancelCommand}" 
                        HorizontalAlignment="Stretch" BorderThickness="2" Foreground="OrangeRed"/>
                    </Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="10">
                        <StackPanel Margin="0,0,20,0">
                            <Label FontFamily = "Verdana" Content="Basic Machine Info" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <StackPanel Orientation="Vertical">
                                <Expander HorizontalAlignment="Stretch" IsExpanded="False" Foreground="White" Background="DimGray" BorderThickness="2">
                                    <Expander.Header>
                                        <TextBlock Text="Current User Info" FontWeight="Bold" FontSize="18"/>
                                    </Expander.Header>
                                    <Expander.Content>
                                        <StackPanel Margin="10,4,0,0">
                                            <Label FontFamily = "Verdana" Content="Basic User Info" FontSize="16" FontWeight="Bold"/>
                                            <Grid Background="SlateGray">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Label Content="Name:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding CurrentUser[0].Name}" Grid.Row="0" Grid.Column="1"/>
                                                <Label Content="Authentication Type:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding CurrentUser[0].AuthenticationType}" Grid.Row="1" Grid.Column="1"/>
                                            </Grid>
                                            <Label FontFamily = "Verdana" Content="User Claims" FontSize="16" FontWeight="Bold"/>
                                            <DataGrid ItemsSource="{Binding CurrentUserClaims}">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Type" Binding="{Binding Type}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="OriginalIssuer" Binding="{Binding OriginalIssuer}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="Issuer" Binding="{Binding Issuer}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="ValueType" Binding="{Binding ValueType}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                </DataGrid.Columns>
                                            </DataGrid>

                                            <Label FontFamily = "Verdana" Content="User Groups" FontSize="16" FontWeight="Bold"/>
                                            <DataGrid ItemsSource="{Binding CurrentUserGroups}">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                </DataGrid.Columns>
                                            </DataGrid>



                                            <!--TODO: For now don't use this way of displaying nested data, use later

                                        <DataGrid ItemsSource="{Binding CurrentUser}" AutoGenerateColumns="False" Height="Auto" Width="Auto">
                                            <DataGrid.RowDetailsTemplate>
                                                <DataTemplate>
                                                    <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Claims}">
                                                        <Label FontFamily = "Verdana" Content="Claims info" FontSize="8"/>
                                                        <DataGrid.Columns>
                                                            <DataGridTextColumn Header="Value" Width="Auto" FontSize="16" Binding="{Binding Path=Value}" />
                                                        </DataGrid.Columns>
                                                    </DataGrid>
                                                </DataTemplate>
                                            </DataGrid.RowDetailsTemplate>

                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Name" Width="Auto" FontSize="16"  Binding="{Binding Path=Name}" />
                                                <DataGridTextColumn Header="AuthenticationType" Width="Auto" FontSize="16" Binding="{Binding Path=AuthenticationType}" />
                                            </DataGrid.Columns>
                                        </DataGrid>-->
                                        </StackPanel>

                                    </Expander.Content>
                                </Expander>
                                <Expander HorizontalAlignment="Stretch" IsExpanded="False" Foreground="White" Background="SlateGray" BorderThickness="2">
                                    <Expander.Header>
                                        <TextBlock Text="Operating System" FontWeight="Bold" FontSize="18"/>
                                    </Expander.Header>
                                    <Expander.Content>
                                        <StackPanel Margin="10,4,0,0">
                                            <Label FontFamily = "Verdana" Content="Basic OS Info" FontSize="16" FontWeight="Bold"/>
                                            <Grid Background="DimGray">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Label Content="Caption:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].Caption}" Grid.Row="0" Grid.Column="1"/>
                                                <Label Content="Organization:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].Organization}" Grid.Row="1" Grid.Column="1"/>
                                                <Label Content="OS Architecture:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].OSArchitecture}" Grid.Row="2" Grid.Column="1"/>
                                                <Label Content="Version:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].Version}" Grid.Row="3" Grid.Column="1"/>
                                                <Label Content="Build Number:" Grid.Row="4" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].BuildNumber}" Grid.Row="4" Grid.Column="1"/>
                                                <Label Content="Build Type:" Grid.Row="0" Grid.Column="2" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].BuildType}" Grid.Row="0" Grid.Column="4"/>
                                                <Label Content="Serial Number:" Grid.Row="1" Grid.Column="2" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].SerialNumber}" Grid.Row="1" Grid.Column="4"/>
                                                <Label Content="Service Pack Major Version:" Grid.Row="2" Grid.Column="2" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].ServicePackMajorVersion}" Grid.Row="2" Grid.Column="4"/>
                                                <Label Content="Service Pack Minor Version:" Grid.Row="3" Grid.Column="2" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].ServicePackMinorVersion}" Grid.Row="3" Grid.Column="4"/>
                                            </Grid>

                                            <Label FontFamily = "Verdana" Content="Additional OS Info" FontSize="16" FontWeight="Bold"/>
                                            <Grid Background="DimGray">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Label Content="Current Time Zone:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].CurrentTimeZone, Converter={StaticResource UnitValueToStringConverter}}" Grid.Row="0" Grid.Column="1"/>
                                                <Label Content="Local DateTime:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].LocalDateTime}" Grid.Row="1" Grid.Column="1"/>
                                                <Label Content="Locale:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].Locale}" Grid.Row="2" Grid.Column="1"/>
                                                <Label Content="Country Code:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].CountryCode}" Grid.Row="3" Grid.Column="1"/>
                                                <Label Content="Install Date:" Grid.Row="4" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].InstallDate}" Grid.Row="4" Grid.Column="1"/>
                                                <Label Content="Last Boot Up Time:" Grid.Row="5" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].LastBootUpTime}" Grid.Row="5" Grid.Column="1"/>
                                                <Label Content="System Directory:" Grid.Row="0" Grid.Column="2" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].SystemDirectory}" Grid.Row="0" Grid.Column="4"/>
                                                <Label Content="System Drive:" Grid.Row="1" Grid.Column="2" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].SystemDrive}" Grid.Row="1" Grid.Column="4"/>
                                                <Label Content="Windows Directory:" Grid.Row="2" Grid.Column="2" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].WindowsDirectory}" Grid.Row="2" Grid.Column="4"/>
                                                <Label Content="Max Numer Of Processes:" Grid.Row="3" Grid.Column="2" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].MaxNumerOfProcesses}" Grid.Row="3" Grid.Column="4"/>
                                                <Label Content="Max Process Memory Size:" Grid.Row="4" Grid.Column="2" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].MaxProcessMemorySize, Converter={StaticResource UnitValueToStringConverter}}" Grid.Row="4" Grid.Column="4"/>
                                            </Grid>
                                        </StackPanel>
                                    </Expander.Content>
                                </Expander>
                                <Expander HorizontalAlignment="Stretch" IsExpanded="False" Foreground="White" Background="DimGray" BorderThickness="2">
                                    <Expander.Header>
                                        <TextBlock Text="BIOS" FontWeight="Bold" FontSize="18"/>
                                    </Expander.Header>
                                    <Expander.Content>
                                        <StackPanel Margin="10,4,0,0">
                                            <Label FontFamily = "Verdana" Content="Basic BIOS Info" FontSize="14" FontWeight="Bold"/>
                                            <Grid Background="SlateGray">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Label Content="Caption:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding Bios[0].Caption}" Grid.Row="0" Grid.Column="1"/>
                                                <Label Content="Manufacturer:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding Bios[0].Manufacturer}" Grid.Row="1" Grid.Column="1"/>
                                                <Label Content="BuildNumber:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding Bios[0].BuildNumber}" Grid.Row="2" Grid.Column="1"/>
                                                <Label Content="Release Date:" Grid.Row="0" Grid.Column="2" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding Bios[0].ReleaseDate}" Grid.Row="0" Grid.Column="3"/>
                                                <Label Content="Serial Number:" Grid.Row="1" Grid.Column="2" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding Bios[0].SerialNumber}" Grid.Row="1" Grid.Column="3"/>
                                              </Grid>
                                            <Label FontFamily = "Verdana" Content="Additional BIOS Info" FontSize="14" FontWeight="Bold"/>
                                            <Grid Background="SlateGray">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Label Content="Embedded Controller Major Version:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding Bios[0].EmbeddedControllerMajorVersion}" Grid.Row="0" Grid.Column="1"/>
                                                <Label Content="Embedded Controller Minor Version:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding Bios[0].EmbeddedControllerMinorVersion}" Grid.Row="1" Grid.Column="1"/>
                                                <Label Content="SMBIOS BIOS Version:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding Bios[0].SMBIOSBIOSVersion}" Grid.Row="2" Grid.Column="1"/>
                                                <Label Content="SMBIOS Major Version:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding Bios[0].SMBIOSMajorVersion}" Grid.Row="3" Grid.Column="1"/>
                                                <Label Content="SMBIOS Minor Version:" Grid.Row="0" Grid.Column="2" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding Bios[0].SMBIOSMinorVersion}" Grid.Row="0" Grid.Column="3"/>
                                                <Label Content="SMBIOS Present:" Grid.Row="1" Grid.Column="2" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding Bios[0].SMBIOSPresent}" Grid.Row="1" Grid.Column="3"/>
                                                <Label Content="System Bios Major Version:" Grid.Row="2" Grid.Column="2" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding Bios[0].SystemBiosMajorVersion}" Grid.Row="2" Grid.Column="3"/>
                                                <Label Content="System Bios Minor Version:" Grid.Row="3" Grid.Column="2" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding Bios[0].SystemBiosMinorVersion}" Grid.Row="3" Grid.Column="3"/>
                                            </Grid>
                                        </StackPanel>
                                    </Expander.Content>
                                </Expander>
                            </StackPanel>
                            <Label FontFamily = "Verdana" Content="Additional Machine Info" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <StackPanel Orientation="Vertical">
                                <Expander HorizontalAlignment="Stretch" IsExpanded="False" Foreground="White" Background="DimGray" BorderThickness="2">
                                    <Expander.Header>
                                        <TextBlock Text="Installed programs" FontWeight="Bold" FontSize="18"/>
                                    </Expander.Header>
                                    <Expander.Content>
                                        <StackPanel Margin="10,4,0,0">
                                            <DataGrid ItemsSource="{Binding InstalledProgram}">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="Version" Binding="{Binding Version}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="Install Date" Binding="{Binding InstallDate}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="Install Location" Binding="{Binding InstallLocation}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </Expander.Content>
                                </Expander>
                                <Expander HorizontalAlignment="Stretch" IsExpanded="False" Foreground="White" Background="SlateGray" BorderThickness="2">
                                    <Expander.Header>
                                        <TextBlock Text="Microsoft Updates" FontWeight="Bold" FontSize="18"/>
                                    </Expander.Header>
                                    <Expander.Content>
                                        <StackPanel Margin="10,4,0,0">
                                            <DataGrid ItemsSource="{Binding MicrosoftWindowsUpdate}">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="CSName" Binding="{Binding CSName}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="InstallDate" Binding="{Binding InstallDate}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="InstalledBy" Binding="{Binding InstalledBy}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="InstalledOn" Binding="{Binding InstalledOn}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="ServicePackInEffect" Binding="{Binding ServicePackInEffect}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="HotFixID" Binding="{Binding HotFixID}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="FixComments" Binding="{Binding FixComments}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="Caption" Binding="{Binding Caption}" Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}" />
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </Expander.Content>
                                </Expander>
                                <Expander HorizontalAlignment="Stretch" IsExpanded="False" Foreground="White" Background="DimGray" BorderThickness="2">
                                    <Expander.Header>
                                        <TextBlock Text="Startup Commands" FontWeight="Bold" FontSize="18"/>
                                    </Expander.Header>
                                    <Expander.Content>
                                        <StackPanel Margin="10,4,0,0">
                                            <DataGrid ItemsSource="{Binding StartupCommand}">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="Command" Binding="{Binding Command}" Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="Caption" Binding="{Binding Caption}" Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="Setting ID" Binding="{Binding SettingID}" Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="User" Binding="{Binding User}" Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="User SID" Binding="{Binding UserSID}" Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </Expander.Content>

                                </Expander>
                                <Expander HorizontalAlignment="Stretch" IsExpanded="False" Foreground="White" Background="SlateGray" BorderThickness="2">
                                    <Expander.Header>
                                        <TextBlock Text="Local Users" FontWeight="Bold" FontSize="18"/>
                                    </Expander.Header>
                                    <Expander.Content>
                                        <StackPanel Margin="10,4,0,0">
                                            <DataGrid ItemsSource="{Binding LocalUser}">
                                                <DataGrid.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Command="Copy" />
                                                    </ContextMenu>
                                                </DataGrid.ContextMenu>
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="0.1*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                                    <DataGridTextColumn Header="Domain" Binding="{Binding Domain}"  Width="0.1*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
