<UserControl x:Class="SystemManagament.Client.WPF.WorkStationTabView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SystemManagament.Client.WPF"
        xmlns:viewModel="clr-namespace:SystemManagament.Client.WPF.ViewModel"
        mc:Ignorable="d"
        xmlns:converters="clr-namespace:SystemManagament.Client.WPF.Converters"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        d:DesignHeight="500" d:DesignWidth="700"             
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:validator="clr-namespace:SystemManagament.Client.WPF.Validator"
             xmlns:control="clr-namespace:SystemManagament.Client.WPF.Control">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:UnitLongValueToStringConverter x:Key="UnitLongValueToStringConverter"/>
        <converters:UnitULongValueToStringConverter x:Key="UnitULongValueToStringConverter"/>
        <converters:UnitShortValueToStringConverter x:Key="UnitShortValueToStringConverter"/>
        <converters:UnitUShortValueToStringConverter x:Key="UnitUShortValueToStringConverter"/>
        <converters:UnitIntValueToStringConverter x:Key="UnitIntValueToStringConverter"/>
        <converters:UnitUIntValueToStringConverter x:Key="UnitUIntValueToStringConverter"/>
        <converters:TimeSpanConverter x:Key="TimeSpanConverter"/>
        <converters:ValidationResultToEnabledConverter x:Key="ValidationResultToEnabledConverter"/>
    </UserControl.Resources>

    <Grid>
        <dragablz:TabablzControl TabStripPlacement="Left" VirtualizingPanel.VirtualizationMode="Standard"
                                 VirtualizingPanel.IsVirtualizing="True" FixedHeaderCount="50">
            <dragablz:TabablzControl.ItemContainerStyle>
                <Style TargetType="{x:Type dragablz:DragablzItem}" BasedOn="{StaticResource MaterialDesignDragableTabItemVerticalStyle}">
                    <Setter Property="Width" Value="140" />
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="TextBlock.Margin" Value="5 0 0 0 "/>
                </Style>
            </dragablz:TabablzControl.ItemContainerStyle>
            <dragablz:TabablzControl.InterTabController>
                <dragablz:InterTabController />
            </dragablz:TabablzControl.InterTabController>
            <TabItem Header="Control">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="8" FontFamily="Verdana" TextWrapping="WrapWithOverflow" 
                               FontSize="14" Text="{StaticResource Label_Control_Description}" Foreground="White"
                               VerticalAlignment="Center"/>

                    <!-- Shutdown machine -->
                    <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" >
                        <Label FontFamily = "Verdana" Content="{StaticResource Control_Timeout}" FontSize="12" VerticalContentAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="1">
                        <TextBox x:Name="TurnMachineOffTextBox" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="WhiteSmoke">
                            <TextBox.Text>
                                <Binding Path="TurnMachineOffTimeoutInSeconds.Parameter" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validator:UintValidator></validator:UintValidator>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="3">
                        <control:ConfirmButton Content="{StaticResource Control_Button_TurnMachineOff}" Command="{Binding TurnMachineOffCommand}"
                                               IsEnabled="{Binding ElementName=TurnMachineOffTextBox, Path=(Validation.Errors), 
                                                Converter={StaticResource ValidationResultToEnabledConverter}}"/>
                    </Grid>
                        
                        <!-- Restart machine -->

                    <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" >
                        <Label FontFamily = "Verdana" Content="{StaticResource Control_Timeout}" FontSize="12" VerticalContentAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="1">
                        <TextBox x:Name="RestartMachineTextBox" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="WhiteSmoke">
                            <TextBox.Text>
                                <Binding Path="RestartMachineTimeoutInSeconds.Parameter" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validator:UintValidator></validator:UintValidator>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="3">
                        <control:ConfirmButton Content="{StaticResource Control_Button_RestartMachine}" Command="{Binding RestartMachineCommand}"
                                               IsEnabled="{Binding ElementName=RestartMachineTextBox, Path=(Validation.Errors), 
                                                Converter={StaticResource ValidationResultToEnabledConverter}}"/>
                    </Grid>

                    <!-- Force machine -->
                    <Grid Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="5">
                        <control:ConfirmButton Content="{StaticResource Control_Button_ForceTurnMachineOff}" Command="{Binding ForceTurnMachineOffCommand}" 
                                               Background="IndianRed"/>
                    </Grid>

                    <Grid Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="5">
                        <control:ConfirmButton Content="{StaticResource Control_Button_ForceRestartMachine}" Command="{Binding ForceRestartMachineCommand}"
                                               Background="IndianRed"/>
                    </Grid>
                        
                        <!-- Start powershell -->

                    <TextBlock Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="8" FontFamily="Verdana" TextWrapping="WrapWithOverflow" 
                               FontSize="14" Text="{StaticResource Label_Control_Powershell_Description}" Foreground="White"
                               VerticalAlignment="Center"/>


                    <Grid Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" >
                        <Label FontFamily = "Verdana" Content="{StaticResource Control_UserContext}" FontSize="12" VerticalContentAlignment="Center"/>
                    </Grid>
                        
                    <Grid Grid.Row="9" Grid.Column="3" Grid.ColumnSpan="1">
                        <TextBox VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="WhiteSmoke">
                            <TextBox.Text>
                                <Binding Path="PowerShellRemoteSessionUserName" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                            </TextBox.Text>
                        </TextBox>
                    </Grid>
                    <Grid Grid.Row="9" Grid.Column="5" Grid.ColumnSpan="3">
                        <Button Content="{StaticResource Control_Button_ConnectPowershell}" Command="{Binding CreatePowershellWindowCommand}" CommandParameter="{Binding PowerShellRemoteSessionUserName}"
                                                   Background="Blue"/>
                    </Grid>
                        
                    </Grid>
                </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="{StaticResource Header_UserInfo}" Foreground="Black" />
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3">
                        <Button Content="{StaticResource Button_LoadSoftwareStatic}" Command="{Binding LoadSoftwareStaticDataCommand}" 
                            HorizontalAlignment="Stretch" BorderThickness="2" Foreground="Orange"/>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="3">
                        <Button Content="{StaticResource Button_Cancel}" Command="{Binding LoadSoftwareStaticDataCommand.CancelCommand}" 
                        HorizontalAlignment="Stretch" BorderThickness="2" Foreground="OrangeRed"/>
                    </Grid>
                    <StackPanel Margin="20,0,20,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="10" Orientation="Vertical">
                        <Label FontFamily = "Verdana" Content="{StaticResource Label_CurrentUserInfo}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <StackPanel Margin="10,0,0,0">
                            <Label FontFamily = "Verdana" Content="{StaticResource Label_BasicUserInfo}" FontSize="16" FontWeight="Bold"/>
                            <Grid Background="SlateGray">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Content="{StaticResource Label_Name}" Grid.Row="0" Grid.Column="0" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource ToolTip_UserName}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding CurrentUser[0].Name}" Grid.Row="0" Grid.Column="1"/>
                                <Label Content="{StaticResource Label_AuthenticationType}" Grid.Row="1" Grid.Column="0" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource ToolTip_AuthenticationType}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding CurrentUser[0].AuthenticationType}" Grid.Row="1" Grid.Column="1"/>
                            </Grid>
                            <Label FontFamily = "Verdana" Content="{StaticResource Label_UserClaims}" FontSize="16" FontWeight="Bold"/>
                            <TextBlock FontFamily = "Verdana" TextWrapping="WrapWithOverflow" FontSize="14" Text="{StaticResource Label_UserClaimsDescription}" Foreground="White"/>
                            <DataGrid ItemsSource="{Binding CurrentUserClaims, IsAsync=True}" MaxHeight="350" Margin="0 10 0 0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="{StaticResource CurrentUserClaims_Type}" Binding="{Binding Type}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}" 
                                                        ToolTipService.ToolTip="{StaticResource CurrentUserClaims_Type_ToolTip}"/>
                                    <DataGridTextColumn Header="{StaticResource CurrentUserClaims_OriginalIssuer}" Binding="{Binding OriginalIssuer}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"
                                                        ToolTipService.ToolTip="{StaticResource CurrentUserClaims_OriginalIssuer_ToolTip}"/>
                                    <DataGridTextColumn Header="{StaticResource CurrentUserClaims_Issuer}" Binding="{Binding Issuer}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"
                                                        ToolTipService.ToolTip="{StaticResource CurrentUserClaims_Issuer_ToolTip}"/>
                                    <DataGridTextColumn Header="{StaticResource CurrentUserClaims_ValueType}" Binding="{Binding ValueType}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"
                                                        ToolTipService.ToolTip="{StaticResource CurrentUserClaims_ValueType_ToolTip}"/>
                                    <DataGridTextColumn Header="{StaticResource CurrentUserClaims_Value}" Binding="{Binding Value}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"
                                                        ToolTipService.ToolTip="{StaticResource CurrentUserClaims_Value_ToolTip}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="{StaticResource Header_UserGroups}" Foreground="Black" />
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3">
                        <Button Content="{StaticResource Button_LoadSoftwareStatic}" Command="{Binding LoadSoftwareStaticDataCommand}" 
                            HorizontalAlignment="Stretch" BorderThickness="2" Foreground="Orange"/>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="3">
                        <Button Content="{StaticResource Button_Cancel}" Command="{Binding LoadSoftwareStaticDataCommand.CancelCommand}" 
                        HorizontalAlignment="Stretch" BorderThickness="2" Foreground="OrangeRed"/>
                    </Grid>
                    <StackPanel Margin="20,0,20,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="10" Orientation="Vertical">
                        <Label FontFamily = "Verdana" Content="{StaticResource Label_CurrentUserInfo}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <StackPanel Margin="10,0,0,0">
                            <Label FontFamily = "Verdana" Content="{StaticResource Label_UserGroups}" FontSize="16" FontWeight="Bold"/>
                            <TextBlock FontFamily = "Verdana" TextWrapping="WrapWithOverflow" FontSize="14" Text="{StaticResource Label_UserGroups_Description}" Foreground="White"/>
                            <DataGrid ItemsSource="{Binding CurrentUserGroups, IsAsync=True}" Margin="0 10 0 0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="{StaticResource CurrentUserGroups_Value}" Binding="{Binding Value}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                    <DataGridTextColumn Header="{StaticResource Label_Name}" Binding="{Binding Name}"  Width="*" ElementStyle="{StaticResource WrappedColumnCellStyle}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="{StaticResource Header_OS}" Foreground="Black" />
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3">
                        <Button Content="{StaticResource Button_LoadSoftwareStatic}" Command="{Binding LoadSoftwareStaticDataCommand}" 
                            HorizontalAlignment="Stretch" BorderThickness="2" Foreground="Orange"/>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="3">
                        <Button Content="{StaticResource Button_Cancel}" Command="{Binding LoadSoftwareStaticDataCommand.CancelCommand}" 
                        HorizontalAlignment="Stretch" BorderThickness="2" Foreground="OrangeRed"/>
                    </Grid>
                    <StackPanel Margin="20,0,20,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="10" Orientation="Vertical">
                        <Label FontFamily = "Verdana" Content="{StaticResource Label_OSInfo}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <StackPanel Margin="10,0,0,0">
                            <Label FontFamily = "Verdana" Content="{StaticResource Label_BasicOSInfo}" FontSize="16" FontWeight="Bold"/>
                            <Grid Background="DimGray">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Content="{StaticResource Label_OS_Caption}" Grid.Row="0" Grid.Column="0" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_Caption_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].Caption}" Grid.Row="0" Grid.Column="1"/>
                                <Label Content="{StaticResource Label_OS_Organization}" Grid.Row="1" Grid.Column="0" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_Organization_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].Organization}" Grid.Row="1" Grid.Column="1"/>
                                <Label Content="{StaticResource Label_OS_Architecture}" Grid.Row="2" Grid.Column="0" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_Architecture_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].OSArchitecture}" Grid.Row="2" Grid.Column="1"/>
                                <Label Content="{StaticResource Label_OS_Version}" Grid.Row="3" Grid.Column="0" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_Version_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].Version}" Grid.Row="3" Grid.Column="1"/>
                                <Label Content="{StaticResource Label_OS_BuildNumber}" Grid.Row="4" Grid.Column="0" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_BuildNumber_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].BuildNumber}" Grid.Row="4" Grid.Column="1"/>
                                <Label Content="{StaticResource Label_OS_BuildType}" Grid.Row="0" Grid.Column="2" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_BuildType_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].BuildType}" Grid.Row="0" Grid.Column="4"/>
                                <Label Content="{StaticResource Label_OS_SerialNumber}" Grid.Row="1" Grid.Column="2" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_SerialNumber_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].SerialNumber}" Grid.Row="1" Grid.Column="4"/>
                                <Label Content="{StaticResource Label_OS_SPMajorVersion}" Grid.Row="2" Grid.Column="2" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_SPMajorVersion_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].ServicePackMajorVersion}" Grid.Row="2" Grid.Column="4"/>
                                <Label Content="{StaticResource Label_OS_SPMinorVersion}" Grid.Row="3" Grid.Column="2" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_SPMinorVersion_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].ServicePackMinorVersion}" Grid.Row="3" Grid.Column="4"/>
                            </Grid>

                            <Label FontFamily = "Verdana" Content="Additional OS Info" FontSize="16" FontWeight="Bold"/>
                            <Grid Background="DimGray">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Content="{StaticResource Label_OS_CurrentTimeZone}" Grid.Row="0" Grid.Column="0" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_CurrentTimeZone_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].CurrentTimeZone, Converter={StaticResource UnitShortValueToStringConverter}}" Grid.Row="0" Grid.Column="1"/>
                                <Label Content="{StaticResource Label_OS_LocalDateTime}" Grid.Row="1" Grid.Column="0" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_LocalDateTime_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].LocalDateTime}" Grid.Row="1" Grid.Column="1"/>
                                <Label Content="{StaticResource Label_OS_Locale}" Grid.Row="2" Grid.Column="0" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_Locale_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].Locale}" Grid.Row="2" Grid.Column="1"/>
                                <Label Content="{StaticResource Label_OS_CountryCode}" Grid.Row="3" Grid.Column="0" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_CountryCode_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].CountryCode}" Grid.Row="3" Grid.Column="1"/>
                                <Label Content="{StaticResource Label_OS_InstallDate}" Grid.Row="4" Grid.Column="0" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_InstallDate_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].InstallDate}" Grid.Row="4" Grid.Column="1"/>
                                <Label Content="{StaticResource Label_OS_LastBootUpTime}" Grid.Row="5" Grid.Column="0" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_LastBootUpTime_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].LastBootUpTime}" Grid.Row="5" Grid.Column="1"/>
                                <Label Content="{StaticResource Label_OS_SystemDirectory}" Grid.Row="0" Grid.Column="2" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_SystemDirectory_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].SystemDirectory}" Grid.Row="0" Grid.Column="4"/>
                                <Label Content="{StaticResource Label_OS_SystemDrive}" Grid.Row="1" Grid.Column="2" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_SystemDrive_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].SystemDrive}" Grid.Row="1" Grid.Column="4"/>
                                <Label Content="{StaticResource Label_OS_WindowsDirectory}" Grid.Row="2" Grid.Column="2" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_WindowsDirectory_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].WindowsDirectory}" Grid.Row="2" Grid.Column="4"/>
                                <Label Content="{StaticResource Label_OS_MaxNumerOfProcesses}" Grid.Row="3" Grid.Column="2" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_MaxNumerOfProcesses_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].MaxNumerOfProcesses}" Grid.Row="3" Grid.Column="4"/>
                                <Label Content="{StaticResource Label_OS_MaxProcessMemorySize}" Grid.Row="4" Grid.Column="2" FontWeight="Bold" FontSize="14"
                                       ToolTip="{StaticResource Label_OS_MaxProcessMemorySize_ToolTip}"/>
                                <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Text="{Binding OperatingSystem[0].MaxProcessMemorySize, Converter={StaticResource UnitULongValueToStringConverter}}" Grid.Row="4" Grid.Column="4"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="{StaticResource Header_BIOS}" Foreground="Black" />
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3">
                        <Button Content="{StaticResource Button_LoadSoftwareStatic}" Command="{Binding LoadSoftwareStaticDataCommand}" 
                            HorizontalAlignment="Stretch" BorderThickness="2" Foreground="Orange"/>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="3">
                        <Button Content="{StaticResource Button_Cancel}" Command="{Binding LoadSoftwareStaticDataCommand.CancelCommand}" 
                        HorizontalAlignment="Stretch" BorderThickness="2" Foreground="OrangeRed"/>
                    </Grid>
                    <StackPanel Margin="20,0,20,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="10" Orientation="Vertical">
                        <Label FontFamily = "Verdana" Content="{StaticResource Label_BIOSInfo}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <StackPanel Margin="10,0,0,0">
                            <Label FontFamily = "Verdana" Content="{StaticResource Label_BasicBIOSInfo}" FontSize="14" FontWeight="Bold"/>
                            <Grid Background="SlateGray">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
